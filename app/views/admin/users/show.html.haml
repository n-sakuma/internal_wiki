%h4
  .pull-left
    = link_to t('terms.index_user'), admin_users_path
    = fa_icon('hand-o-left')
  .pull-right
    = link_to fa_icon('edit 2x'), edit_admin_user_path(@user)
    = link_to fa_icon('times 2x'), admin_user_path(@user), :method => :delete, :confirm => t('actions.confirm_delete')


%h2.text-center
  %small= @user.formatted_kind
  = image_tag avatar_url(@user, size: 50)
  = @user.name.truncate(15)
  %br/
  %small= @user.email

= render 'shared/flash_messages'

%hr

= render 'visible_wiki'
