= form_for @user, url: password_reset_path(@token), :html => {:method => :put, class: 'form-signin'} do |f|
  %h2.text-center
    = fa_icon('wrench')
    = t('terms.password_reset_title')
  .field
    %h4.text-center
      = f.label :email
      \:
      = @user.email
  %hr
  = error_messages_for(@user)
  .field
    = f.label :password
    = f.password_field :password, class: 'input-block-level'
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation, class: 'input-block-level'
    = hidden_field_tag :token, @token
  .actions
    = f.submit class: 'btn btn-primary'
