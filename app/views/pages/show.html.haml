= content_for :menu_link do
  = render 'menu_link'

= render 'shared/flash_messages'

.pull-left
  %h3
    %small= WikiInformation.human_attribute_name('name')
    =truncate(@wiki_info.name, length: 20)

.pull-right
  %h3
    = link_to raw('<i class="icon-pencil"></i>'), edit_page_path(wiki_name: @wiki_info.name, page_name: @page.url_name), class: 'btn btn-primary'
    = link_to raw('<i class="icon-trash"></i>'), page_path(wiki_name: @wiki_info.name, page_name: @page.url_name), confirm: t('actions.confirm_delete'), method: :delete, class: 'btn btn-danger'

%h2
  .text-center= truncate(@page.name, length: 20)

%hr
#page-content= raw(@page.content)
%hr

%small.pull-right
  = "Last edited by "
  = image_tag(avatar_url(@wiki_info.creator, size: 20))
  = @page.last_editor_name
  = time_ago_in_words(@page.updated_at)


- if @page.histories.size > 1
  %h4= t('terms.page_history')
  - @page.histories.each do |h|
    %p= link_to "#{h[:date].to_s(:db)} (by #{h[:author]})", histories_page_path(wiki_name: @wiki_info.name, page_name: @page.url_name, sha: h[:sha])
  = link_to t('terms.histories_more'), histories_page_path(wiki_name: @wiki_info.name, page_name: @page.url_name), id: 'histories_more', class: 'btn btn-small btn-inverse'
