= content_for :menu_link do
  = render 'menu_link'

= render 'shared/flash_messages'

.pull-right
  = link_to raw('<i class="icon-pencil"></i>'), edit_wiki_information_page_path(@wiki_info, @page), :class => 'btn btn-primary'
  = link_to raw('<i class="icon-trash"></i>'), wiki_information_page_path(@wiki_info, @page), :confirm => t('actions.confirm_delete'), :method => :delete, :class => 'btn btn-danger'

%h2
  = truncate(@wiki_info.name, :length => 20)
  &raquo;
  = link_to truncate(@page.name, :length => 20), '#', :id => "page_name_link", :"data-resource" => "page", :"data-name" => "name", :remote => true, :method => :put

%hr
= raw(@page.content)
%hr

%small.pull-right= "Last edited by #{@page.last_editor_name} #{time_ago_in_words(@page.updated_at)}"

- unless @page.histories.empty?
  %h4= t('terms.page_history')
  - @page.histories.each do |h|
    %p= link_to "#{h[:date].to_s(:db)} (by #{h[:author]})", histories_wiki_information_page_path(@wiki_info, @page, :sha => h[:sha])
  = link_to t('terms.histories_more'), histories_wiki_information_page_path(@wiki_info, @page), :id => 'histories_more', :class => 'btn btn-inverse'

:coffeescript
  $ ->
    $('#page_name_link').editable
      title: "Enter Page name"
      type: 'text'
      url: "#{wiki_information_page_path(@wiki_info, @page)}"
