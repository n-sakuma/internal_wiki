= content_for :menu_link do
  = render 'menu_link'

-# %small
-#   = breadcrumbs(@page)

%p#notice= notice

%h3.pull-left= @wiki_info.name
.pull-right
  = link_to t('actions.editing'), edit_wiki_information_page_path(@wiki_info, @page), :class => 'btn btn-primary'
  = link_to t('actions.deleting'), wiki_information_page_path(@wiki_info, @page), :confirm => t('actions.confirm_delete'), :method => :delete, :class => 'btn btn-danger'

%h1{:style => "text-align:center"}= link_to truncate(@page.name, :length => 20), '#', :id => "page_name_link", :"data-resource" => "page", :"data-name" => "name", :remote => true, :method => :put



%hr

= raw(@page.content)

%hr

%small.pull-right= "Last edited by #{@page.recent_editor.name} #{time_ago_in_words(@page.created_at)}"

- unless @page.histories.empty?
  %h4= t('terms.page_history')
  - @page.histories.each do |h|
    = "#{h[:author]} (#{h[:date]}) --- #{h[:sha]}"
    %br

:javascript
  $(function(){
    $('#page_name_link').editable({
      title: "Enter Page name",
      type: 'text',
      url: "#{wiki_information_page_path(@wiki_info, @page)}"
    });
  });
