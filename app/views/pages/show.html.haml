-# %small
-#   = breadcrumbs(@page)


%p#notice
  = notice

%h4
  = "Page name: #{@page.name}"
  = link_to '(Edit)', edit_wiki_information_page_path(@wiki_info, @page)
  = link_to '(Destroy)', wiki_information_page_path(@wiki_info, @page), :confirm => 'Are you sure?', :method => :delete

  %small= "Last edited by #{@page.author} #{time_ago_in_words(@page.date)} ago."

%hr

= raw(@page.content)

%hr

