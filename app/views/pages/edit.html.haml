= content_for :menu_link do
  = render 'menu_link'

%h2
  = @wiki_info.name
  &raquo;
  = @page.name

= render 'form'

= subscribe_to "/pages/#{@page.id}"


.pull-right= link_to t('actions.show_detail'), wiki_information_page_path(@wiki_info, @page)

:coffeescript
  $ ->
    parse_md = ->
      result = Markdown $('#markdown-text').val()
      $('#preview-result').html result
    ajax_request = (request_url, body)->
      $.ajax
        type: "POST"
        url: request_url
        data:
          edited_user_id: "#{current_user.id}"
          body: body
        dataType: 'json'

    prev = initial = $('#markdown-text').val()
    $('#markdown-text').keyup ->
      markdown_text = $('#markdown-text').val()
      if (prev != markdown_text)
        prev = markdown_text
        ajax_request("#{preview_wiki_information_page_path(@wiki_info, @page)}", markdown_text)

    # 初回描画
    parse_md()

