= form_for @wiki_info do |f|
  - if @wiki_info.errors.any?
    #error_explanation
      %h2= "#{pluralize(@wiki_info.errors.count, "error")} prohibited this wiki_information from being saved:"
      %ul
        - @wiki_info.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :is_private
    = f.select :is_private, [[t('terms.publicity'), false], [t('terms.limited_publicity'), true]]

  .actions
    = f.submit t('actions.save')
